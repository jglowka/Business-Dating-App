<h1>New Event</h1>


<%= form_with scope: :event, url: events_path, local: true do |form| %>
  <p>
    <%= form.label :Subject %><br>
    <%= form.text_field :subject %>
  </p>

  <p>
    <%= form.label :Location %><br>
    <%= form.text_field :location %>
  </p>

  <p>
    <%= form.label :'Start date' %><br>
    <%= form.date_field :start_date %>
  </p>

  <p>
    <%= form.label :'Start time' %><br>
    <%= form.time_field :start_time %>
  </p>

  <p>
    <%= form.label :'End date' %><br>
    <%= form.date_field :end_date %>
  </p>

  <p>
    <%= form.label :'End time' %><br>
    <%= form.time_field :end_time %>
  </p>
  <p>
    <%= form.label :Description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :'Maximum number of participants' %><br>
    <%= form.text_field :max_users %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

